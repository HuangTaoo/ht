			</Or>
			<Contains>
				<Field name="Spec"/>
				<QBE paramName="Spec"/>
			</Contains>
			<Contains>
				<Field name="Code"/>
				<QBE paramName="Code"/>
			</Contains>
			<EQ>
				<Field name="GoodsProperty_ID"/>
				<QBE paramName="GoodsProperty_ID"/>
			</EQ>

      <EQ>
        <Field name="ProductLine_ID" />
        <QBE paramName="ProductLine_ID"/>
